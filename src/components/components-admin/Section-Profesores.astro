  cedulaInput.addEventListener('blur', async function() {
    const cedula = this.value.trim();
    if (!cedula) return;
    
    try {
      const response = await fetch(`http://localhost:3001/api/verificar-cedula?cedula=${encodeURIComponent(cedula)}`);
